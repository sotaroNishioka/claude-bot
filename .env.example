# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repository_name

# Claude Code Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_CLI_PATH=/usr/local/bin/claude
DAILY_TOKEN_LIMIT=45000

# Project Paths Configuration
TARGET_PROJECT_PATH=../target-project
CLAUDE_BOT_PATH=/home/pi/Develop/claude-bot

# Prompts Configuration (Fixed file names)
PROMPTS_DIR=./prompts
ISSUE_MENTION_PROMPT=issue_mention.txt
ISSUE_COMMENT_PROMPT=issue_comment.txt
PR_MENTION_PROMPT=pr_mention.txt
PR_COMMENT_PROMPT=pr_comment.txt

# Database Configuration
DATABASE_PATH=./mention_tracker.db

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/claude-bot.log

# Cron Configuration
DETECTION_INTERVAL="*/5 * * * *"
BACKUP_INTERVAL="0 2 * * *"

# Mention Configuration
MENTION_PATTERNS=@claude,@claude-code
ENABLE_AUTO_RESPONSE=true

# System Configuration
ENVIRONMENT=production
DEBUG=false

# Path Configuration for Node environments
# Examples:
# CLAUDE_CLI_PATH=/home/pi/.nodenv/shims/claude
# CLAUDE_CLI_PATH=/home/pi/.nvm/versions/node/v18.19.0/bin/claude
# CLAUDE_CLI_PATH=/usr/local/bin/claude