{
  "name": "claude-bot",
  "version": "1.0.0",
  "description": "Claude Code mention detection and automation system",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "daemon": "npm run build && node dist/main.js --daemon",
    "setup": "npm run build && node dist/setup.js",
    "test": "jest",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "check": "biome check .",
    "check:fix": "biome check --apply .",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["claude", "github", "automation", "typescript"],
  "author": "sotaroNishioka",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.1.1",
    "node-cron": "^3.0.3",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@biomejs/biome": "^1.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
